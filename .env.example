# BeemoTooling Voice Worker Configuration
# Copy to .env for local dev defaults
# Copy to .env.production for production overrides
# Run: BMO_ENV=production python worker.py  (to use production config)

# Hub connection (local dev)
HUB_HOST=localhost
HUB_PORT=8300
HUB_SSL=false
HUB_AUTH_TOKEN=

# Hugging Face token (for model downloads)
HF_TOKEN=your_hf_token_here

# Enable dev-only routes (/gen, /review-mode). Omit or set to FALSE in production.
DEV=TRUE
